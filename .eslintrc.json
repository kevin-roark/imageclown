{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": ["error", 2],
        "quotes": ["error", "single"],
        "semi": ["error", "never"],
        "no-console": "off",
        "space-before-function-paren": ["error", {
            "named": "always",
            "anonymous": "always",
            "asyncArrow": "ignore"
        }]
    }
}
